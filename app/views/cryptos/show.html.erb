<% for x in @show_crypto %>
  <% if @crypto.symbol.upcase == x["symbol"] %>
      
      <% crypto_name = x["name"] %> 
      <% crypto_price = x['quote']['USD']['price'] %>
      <% crypto_rank = x["cmc_rank"] %>
  <% end %>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= crypto_name %></h3>
  </div>
  <div class="panel-body">
  
  <h1><%= @crypto.symbol.upcase %></h1>
  
  <br/><br/>
  
  <p>
    <strong>Current Price: </strong> <%= number_to_currency(crypto_price) %>
  </p>
  
  <p>
    <strong>Rank: </strong> <%= crypto_rank %>
  </p>
  
  <p>
    <strong>Cost Paid per:</strong>
    <%= @crypto.cost_per %>
  </p>
  
  <p>
    <strong>Amount owned:</strong>
    <%= @crypto.amount_owned %>
  </p>
  
  
  </div>
    <div class="panel-footer">
      <%= link_to 'Edit', edit_crypto_path(@crypto) %>
      <%#= link_to 'Delete', cryptos_delete_path(@crypto), data: {method: :delete} %>
      <%= link_to 'Delete cryptos', cryptos_delete_path, method: :delete %>
      <%= link_to 'Back', cryptos_path %>
    </div>
  </div>
  